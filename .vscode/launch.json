    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/",
            "args": [
                "server",
                "--port=8080",
                "-s",
                "localhost"
            ]
        },
        {
            "name": "Scheduler",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/",
            "args": [
                "scheduler",
            ]
        },
        {
            "name": "Checks",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/",
            "args": [
                "start",
                "${workspaceFolder}/examples/checks.yaml"
            ],
            "env": {
                "CHECKOUT_DIR": "DENI",
                "DAGS_DIR": "DENI"
            }
        },
        {
            "name": "Subworkflows",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/",
            "args": [
                "start",
                "${workspaceFolder}/examples/subworkflow_parent.yaml"
            ]
        }
    ]
}